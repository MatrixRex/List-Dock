{
  "manifest_version": 3,
  "name": "List Dock",
  "version": "1.0.0",
  "description": "A persistent To-Do Sidebar for Chrome",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "action": {
    "default_title": "Open List Dock"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}